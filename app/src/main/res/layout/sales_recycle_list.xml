<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/salesRecCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
       >

        <TextView
            android:id="@+id/recSCusID"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="CustomerName"
            android:textColor="@color/lavender"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recSQty"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recSCusID"
            android:text="quantity"
            android:textAlignment="center"
            android:textColor="@color/lavender"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/recSProduct"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recSCusID"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:text="Product Name"
            android:textColor="@color/lavender"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/resSTotal"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recSProduct"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="15dp"
            android:maxLines="1"
            android:text="Total"
            android:textColor="@color/lavender"
            android:textSize="20sp" />




    </RelativeLayout>
</androidx.cardview.widget.CardView>