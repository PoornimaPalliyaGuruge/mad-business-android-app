        android:layout_height="wrap_content"
        android:text="Sales Add"
        android:textColor="@color/white"
        android:textSize="53dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="35dp" />

