<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="46dp">

    <TextView
        android:id="@+id/tvInventory"
        android:layout_width="403dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="4dp"
        android:text="@string/tvInventory"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPropic" />

    <ImageView
        android:id="@+id/imgPropic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="276dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/profilepic" />

    <TextView
        android:id="@+id/tvWlcometext"
        android:layout_width="243dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:text="@string/tvWlcometext"
        android:textColor="@color/material_dynamic_neutral10"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtProfileName"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edtProfileName"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/imgPropic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWlcometext" />

    <TextView
        android:id="@+id/tvTotalStock"
        android:layout_width="151dp"
        android:layout_height="140dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/bkg_inventory"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStock" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="137dp"
        android:layout_height="58dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="503dp" />

    <TextView
        android:id="@+id/tvTotalitems"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="52dp"
        android:text="@string/tvTotalitems"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInventory" />

    <TextView
        android:id="@+id/tvStock"
        android:layout_width="151dp"
        android:layout_height="41dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="41dp"
        android:text="@string/tvStock"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTotalitems"
        app:layout_constraintTop_toBottomOf="@+id/tvInventory" />

    <Button
        android:id="@+id/btnViewAll"
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="102dp"
        android:backgroundTint="@color/app_theam"
        android:text="@string/btnViewAll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddItems" />

    <Button
        android:id="@+id/btnAddItems"
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:background="@color/app_theam"
        android:text="@string/btnAddItems"
        android:textColor="#263238"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="586dp" />

    <TextView
        android:id="@+id/tvTotalproducts"
        android:layout_width="151dp"
        android:layout_height="140dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/bkg_inventory"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalitems" />

    <TextView
        android:id="@+id/tvNoItem"
        android:layout_width="137dp"
        android:layout_height="58dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="325dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/tvNoItem"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btnViewAll"
        app:layout_constraintEnd_toStartOf="@+id/tvStockHand"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/tvTotalproducts"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalproducts"
        app:layout_constraintVertical_bias="0.61" />

    <TextView
        android:id="@+id/tvStockHand"
        android:layout_width="137dp"
        android:layout_height="58dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="7dp"
        android:text="@string/tvStockHand"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@+id/tvTotalStock"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/tvStock" />


</androidx.constraintlayout.widget.ConstraintLayout>