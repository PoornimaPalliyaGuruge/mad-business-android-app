<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="5dp"
    android:paddingTop="10dp"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="46dp">

    <TextView
        android:id="@+id/tvInventory"
        android:layout_width="403dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="594dp"
        android:paddingTop="10dp"
        android:text="@string/inventory_management"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtProfileName" />

    <TextView
        android:id="@+id/tvWlcometext"
        android:layout_width="243dp"
        android:layout_height="44dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="27dp"
        android:paddingTop="10dp"
        android:text="@string/tvWlcometext"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtProfileName"
        android:layout_width="243dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:text="@string/edtProfileName"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWlcometext" />

    <TextView
        android:id="@+id/tvTotalStock"
        android:layout_width="151dp"
        android:layout_height="140dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bkg_inventory"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="@string/_125000_00"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvStock"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvTotalitems"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:paddingTop="10dp"
        android:text="@string/tvTotalitems"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tvTotalproducts"
        app:layout_constraintTop_toBottomOf="@+id/tvInventory" />

    <TextView
        android:id="@+id/tvStock"
        android:layout_width="151dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:paddingTop="10dp"
        android:text="@string/stock_in_hand_rs"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tvTotalStock"
        app:layout_constraintTop_toBottomOf="@+id/tvInventory" />

    <Button
        android:id="@+id/btnViewAll"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="88dp"
        android:backgroundTint="@color/app_theam"
        android:textColor="@color/black"
        android:paddingTop="10dp"
        android:text="@string/btnViewAll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddItems" />

    <Button
        android:id="@+id/btnAddItems"
        android:layout_width="217dp"
        android:layout_height="55dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="88dp"
        android:backgroundTint="@color/app_theam"
        android:paddingTop="10dp"
        android:text="@string/btnAddItems"
        android:textColor="#263238"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalStock" />

    <Button
        android:id="@+id/btneditProduct"
        android:layout_width="217dp"
        android:layout_height="55dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="88dp"
        android:backgroundTint="@color/app_theam"
        android:paddingTop="10dp"
        android:text="@string/edit_products2"
        android:textColor="#263238"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewAll" />

    <TextView
        android:id="@+id/tvTotalproducts"
        android:layout_width="151dp"
        android:layout_height="140dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36dp"
        android:text="@string/tvNoItem"
        android:background="@drawable/bkg_inventory"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/tvTotalStock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalitems"
        tools:ignore="MissingConstraints" />


