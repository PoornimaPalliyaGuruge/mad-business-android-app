<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/UI_Inventry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtProfileName"
        android:layout_width="259dp"
        android:layout_height="56dp"
        android:layout_margin="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="22dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/edtProfileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_profilePic"
        app:layout_constraintTop_toBottomOf="@+id/tv_welcome" />

    <ImageView
        android:id="@+id/img_profilePic"
        android:layout_width="93dp"
        android:layout_height="98dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="260dp"
        android:layout_height="28dp"
        android:layout_margin="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="22dp"
        android:text="@string/tv_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_profilePic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="100dp" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="161dp"
        android:layout_height="63dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="@string/tvTitle"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnAddProduct"
        android:layout_width="65dp"
        android:layout_height="72dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/white"
        android:contentDescription=".."
        app:layout_constraintBottom_toTopOf="@+id/tv_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add"
        app:tint="@color/black"
        tools:srcCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/tvTotalProduct"
        android:layout_width="159dp"
        android:layout_height="42dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:text="@string/tvTotalProduct"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_profilePic" />

    <TextView
        android:id="@+id/tvStockInHand"
        android:layout_width="146dp"
        android:layout_height="38dp"
        android:layout_margin="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/tvStockInHand"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tvTotalProduct"
        app:layout_constraintTop_toBottomOf="@+id/edtProfileName" />

    <EditText
        android:id="@+id/edtTotalProductCount"
        android:layout_width="162dp"
        android:layout_height="146dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="250"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalProduct" />

    <EditText
        android:id="@+id/edtStockInHandValue"
        android:layout_width="162dp"
        android:layout_height="146dp"
        android:layout_margin="20dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="12000"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtTotalProductCount"
        app:layout_constraintTop_toBottomOf="@+id/tvStockInHand" />

    <Button
        android:id="@+id/btnProductList"
        android:layout_width="378dp"
        android:layout_height="112dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="13dp"
        android:text="@string/btnProductList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTotalProductCount" />

</androidx.constraintlayout.widget.ConstraintLayout>