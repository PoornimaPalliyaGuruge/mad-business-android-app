<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/custom_card_view_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theam"
    android:backgroundTint="@color/app_theam"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCardView"
        android:layout_width="0dp"
        android:layout_height="715dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/bkg_customer"
        app:cardBackgroundColor="@color/app_theam_light"
        app:cardCornerRadius="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="693dp"
            android:backgroundTint="@color/app_theam">

            <Button
                android:id="@+id/userProfUpdateBtn"
                android:layout_width="163dp"
                android:layout_height="50dp"
                android:layout_marginStart="24dp"
                android:backgroundTint="@color/app_theam"
                android:text="@string/btn_update_txt"
                app:cornerRadius="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/userProfDeleteBtn"
                android:layout_width="163dp"
                android:layout_height="50dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="@color/btn_delete_clr"
                android:text="Delete"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="362dp"
                android:layout_height="329dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userCrtImage">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userProfIDOne"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:text="ID : " />

                    <TextView
                        android:id="@+id/userProfIDTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userProfNameOne"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:text="Name : " />

                    <TextView
                        android:id="@+id/userProfNameTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userProfAddOne"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:text="Address : " />

                    <TextView
                        android:id="@+id/userProfAddTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userProfAgeOne"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:text="Age : " />

                    <TextView
                        android:id="@+id/userProfAgeTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userProfPhonene"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:text="Phone : " />

                    <TextView
                        android:id="@+id/userProfPhoneTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userProfGenderOne"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:text="Gender : " />

                    <TextView
                        android:id="@+id/userProfGenderTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userProfMailOne"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:text="Mail : " />

                    <TextView
                        android:id="@+id/userProfMailTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userProfPayOne"
                        android:layout_width="119dp"
                        android:layout_height="match_parent"
                        android:text="Payment : " />

                    <TextView
                        android:id="@+id/userProfPayTwo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/userCrtImage"
                android:layout_width="182dp"
                android:layout_height="136dp"
                android:layout_marginStart="100dp"
                android:layout_marginEnd="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/customer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/userProfBackBtn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:contentDescription="@string/btn_back"
        app:backgroundTint="@color/app_theam_light"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_ios_new_24"
        app:tint="@color/app_theam"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/userProfileitle"
        android:layout_width="374dp"
        android:layout_height="78dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="User Profile"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>

